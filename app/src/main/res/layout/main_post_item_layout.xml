<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_item_postedUserImg_imgView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/main_user_profile_avatar"
            app:civ_border_color="@color/hamburger"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@id/first_line"
            app:layout_constraintEnd_toStartOf="@+id/post_item_postedUserName_txtview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/post_item_postedUserName_txtview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/post_item_postType_txtview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/post_item_postedUserImg_imgView"
            app:layout_constraintTop_toTopOf="@+id/post_item_postedUserImg_imgView" />

        <TextView
            android:id="@+id/post_item_postType_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/basic"
            android:textColor="@color/drawerMenuGray"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/post_item_postedUserImg_imgView"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/post_item_postedUserImg_imgView"
            app:layout_constraintTop_toBottomOf="@+id/post_item_postedUserName_txtview" />

        <TextView
            android:id="@+id/post_item_postTime_txtview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="viewStart"
            android:textColor="@color/drawerMenuGray"
            android:textDirection="ltr"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@+id/post_item_postType_txtview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/post_item_postType_txtview" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/post_item_point_icon"
            app:layout_constraintBottom_toBottomOf="@+id/post_item_postType_txtview"
            app:layout_constraintEnd_toStartOf="@+id/post_item_postTime_txtview"
            app:layout_constraintStart_toEndOf="@+id/post_item_postType_txtview"
            app:layout_constraintTop_toTopOf="@+id/post_item_postType_txtview" />

        <View
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="12dp"
            android:background="@color/lessGray"
            app:layout_constraintBottom_toTopOf="@+id/titleAndBodyLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_item_postedUserImg_imgView" />

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/first_line"
            app:layout_constraintBottom_toTopOf="@id/second_line"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/titleAndBodyLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/post_item_postTitle_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeStepGranularity="2dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:ems="5"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_item_postBody_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="16sp"
                app:autoSizeStepGranularity="2dp"
                app:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:ems="5"
                android:fontFamily="@font/open_sans_light"
                android:maxLines="4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>


        <View
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/lessGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleAndBodyLayout" />

        <TextView
            android:id="@+id/post_item_postCategory_txtview"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/background_search"
            android:fontFamily="@font/allerta"
            android:paddingStart="4dp"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingEnd="4dp"
            android:text="@string/category_cs"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/postedInText"
            android:textColor="@color/lessGray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/post_item_postCategory_txtview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_line" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>