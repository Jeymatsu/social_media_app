<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_item_postedUserImg_imgView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/main_user_profile_avatar"
            app:civ_border_color="@color/hamburger"
            app:civ_border_width="2dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/post_item_postedUserName_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/post_item_postedUserImg_imgView"
            android:layout_alignBottom="@id/post_item_postedUserImg_imgView"/>

        <TextView
            android:id="@+id/post_item_postType_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/drawerMenuGray"
            android:textSize="13sp"
            android:layout_below="@id/post_item_postedUserName_txtview"
            android:layout_toEndOf="@id/post_item_postedUserImg_imgView"/>

        <TextView
            android:id="@+id/post_item_postTime_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/drawerMenuGray"
            android:textSize="13sp"
            android:layout_below="@id/post_item_postType_txtview"
            android:layout_toEndOf="@id/post_item_postedUserImg_imgView"/>

        <View
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="12dp"
            android:background="@color/lessGray"
            android:layout_below="@id/post_item_postedUserImg_imgView"/>

        <LinearLayout
            android:id="@+id/titleAndBodyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_below="@id/first_line">

            <TextView
                android:id="@+id/post_item_postTitle_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="5"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:layout_marginBottom="2dp"
                android:paddingEnd="8dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/post_item_postBody_txtview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="5"
                android:fontFamily="@font/open_sans_light"
                android:maxLines="4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/lessGray"
            android:layout_below="@id/titleAndBodyLayout"/>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/open_sans_light"
                android:text="@string/postedInText"
                android:textColor="@color/lessGray"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:id="@+id/postItemCategoryHolder"
                android:layout_width="wrap_content"
                android:scrollbars="none"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/postItemFirstCategoryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/postItemSecondCategoryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/postItemThirdCategoryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"></LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/footer"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <!-- Like icon -->
            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_thumb_up_24"
                android:tint="@color/add_post_blue"
                tools:ignore="UseAppTint" />

            <!-- Comment icon -->
            <ImageView
                android:id="@+id/comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/add_post_blue"
                android:src="@drawable/baseline_comment_24"
                tools:ignore="UseAppTint" />
        </RelativeLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
