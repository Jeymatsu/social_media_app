<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/loginSignUpBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/loading"/>

    <LinearLayout
        android:id="@+id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/hamburger"
            android:id="@+id/exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginEnd="1dp"
            android:textStyle="bold"
            android:fontFamily="@font/basic"
            android:text="EXCHANGE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/drawer_orange"
            android:layout_marginStart="1dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/allerta"
            android:text="learning" />
    </LinearLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:textSize="16sp"
        android:textColor="@color/drawerMenuGray"
        android:layout_height="wrap_content"
        android:text="Sign in with your email" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="2dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:foreground="@drawable/background_rectangle_ouline"
        android:id="@+id/emailLayout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:theme="@style/LoginEditTextStyle"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:background="@null"
            android:textColor="@color/darkGray"
            android:hint="Email"
            android:textColorHint="@color/darkGray"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:fontFamily="@font/open_sans_light"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:backgroundTint="@color/fullwhite" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:foreground="@drawable/background_rectangle_ouline"
        app:cardCornerRadius="2dp"
        android:layout_below="@id/emailLayout"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/passwordLayout"
        app:cardElevation="0dp"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:theme="@style/LoginEditTextStyle"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/darkGray"
            android:hint="Password"
            android:fontFamily="@font/open_sans_light"
            android:inputType="textPassword"
            android:textColorHint="@color/darkGray"
            android:textSize="18sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:backgroundTint="@color/fullwhite" />
    </androidx.cardview.widget.CardView>


    <CheckBox
        style="@style/LoginInCheckBoxStyle"
        android:theme="@style/LoginInCheckBoxStyle"
        android:textColor="@color/drawerMenuGray"
        android:buttonTint="@color/darkGray"
        android:drawableTint="@color/hamburger"
        android:fontFamily="@font/montserrat"
        android:id="@+id/rememberMe"
        android:layout_below="@id/passwordLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me" />

    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/loginBtn"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/fullwhite"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/rememberMe">

        <TextView
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/basic"
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN IN" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/forgetPass"
        android:layout_below="@id/loginBtn"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/basic"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:textColor="@color/darkGray"
        android:layout_height="wrap_content"
        android:text="Forgot your Password?" />

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_below="@id/forgetPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:layout_above="@id/footer"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorName="BallClipRotateMultipleIndicator"
        app:indicatorColor="@color/hamburger"
        android:visibility="gone"
        style="@style/AVLoadingIndicatorView" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/basic"
            android:textColor="@color/drawerMenuGray"
            android:text="Don't have an account yet?" />

        <TextView
            android:id="@+id/createOne"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:textColor="@color/hamburger"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:text="Sign Up" />
    </LinearLayout>

</RelativeLayout>