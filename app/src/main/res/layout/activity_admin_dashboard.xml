<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminDashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/chatToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/MainActivityToolbarTheme">

            <LinearLayout
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chat_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="1dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/basic"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Welcome Admin"
                    android:textColor="@color/bottomNavigationBackground"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/appbar"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/rlMain">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rlTop"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="150dp"
                android:padding="3dp"
                android:id="@+id/cardManageUsers"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@drawable/admin_cards"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">
                 <ImageView
                     android:layout_width="100dp"
                     android:id="@+id/imgManageUsers"
                     android:layout_centerInParent="true"
                     android:layout_height="100dp"
                     android:src="@drawable/baseline_supervised_user_circle_24"
                     android:layout_gravity="center"
                     app:tint="@color/bottomNavigationBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage users"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/admin_cards"
                android:elevation="10dp"
                android:padding="3dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_perm_media_24"
                    app:tint="@color/bottomNavigationBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Manage Posts"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/rlTop"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="150dp"
                android:padding="3dp"
                android:background="@drawable/admin_cards"
                android:id="@+id/cardManageChatRooms"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/imgManageChatRooms"
                    android:layout_height="100dp"
                    android:src="@drawable/baseline_chat_24"
                    android:layout_gravity="center"
                    app:tint="@color/bottomNavigationBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat Rooms"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_margin="10dp"
                android:padding="3dp"
                android:layout_height="150dp"
                android:background="@drawable/admin_cards"
                app:cardCornerRadius="10dp"
                android:layout_alignParentRight="true"
                android:elevation="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_logout"
                    android:layout_gravity="center"
                    app:tint="@color/bottomNavigationBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>












</RelativeLayout>